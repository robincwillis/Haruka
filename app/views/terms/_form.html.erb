<div class="row-fluid">
  <div class="span8 offset2"> 
    <%= form_for(@term,:html => {:class => "form-horizontal", :multipart => true}) do |f| %>
      <% if @term.errors.any? %>
        <div class ="row-fluid">
          <div class="span12">
            <div id="error_explanation">
              <div class="alert alert-error">
                <p class="lead"><%= pluralize(@term.errors.count, "error") %></p>
                <ul class="unstyled">
                  <% @term.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="row-fluid">
            <div class="span8">
              <div class="row-fluid">
                <div class="control-group span12">
                  <%= f.label :name %>
                  <%= f.text_field :name, class: "input-block-level" %>
                </div>
              </div>
              <div class="row-fluid">
                  <div class="control-group span4">
                    <%= f.label :kanji  %>
                    <%= f.text_field :kanji, class: "input-block-level" %>
                  </div>
                  <div class="control-group span4">
                    <%= f.label :phonetic %>
                    <%= f.text_field :phonetic, class: "input-block-level"  %>
                  </div>
                  <div class="control-group span4">
                    <%= f.label :kana %>
                    <%= f.text_field :kana, class: "input-block-level"  %>
                  </div>
              </div>
              <div class="row-fluid">
                <div class="control-group span6">
                  <%= f.label :def %>
                  <%= f.text_field :def, class: "input-block-level"  %>
                </div>
                <div class="control-group span6">
                  <%= f.label :lit %>
                  <%= f.text_field :lit, class: "input-block-level"  %>
                </div>
              </div>

            </div>
            <div class="span4">
              <!-- description -->
              <div class="control-group span12">
                <%= f.label :desc%>    
                <%= f.text_area :desc, class: "input-block-level" %>
              </div>
            </div>
      </div>
      <div class="row-fluid">
        <div class="control-group">
          <%= f.file_field :photo, :title=>'Upload Thumbnail' %>
        </div>
        <div class="control-group">
          <%= f.submit :class=>'btn btn-pink  '  %>
        </div>
      </div>

      <!-- THUMBNAIL UPLOAD -->
      
    <%= javascript_include_tag params[:controller] %>
    <% end %>
  </div>
</div>