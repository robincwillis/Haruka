<%= render 'shared/navigation' %>
<p id="notice"><%= notice %></p>
<div class="row-fluid">


<div class="span6">


<%= link_to_if(@term.photo?, image_tag(@term.photo.url(:thumb)), @term.photo.url) if @term.photo? %>
<%# if @term.photo? %>
<%# image_tag @term.photo.url(:thumb) %>
<%# end %>


<% if @term.kanji? %>
  <h1><%= @term.kanji %></h1>
<% end %>

<% if @term.kana? %>
  <h1><%= @term.kana %></h1>
<% end %>

<h2><%= @term.name %></h2>

<% if @term.phonetic? %>
<p><b class="light">Phonetic: </b><%= @term.phonetic %></p>
<% end %>
<% if @term.def? %>
<p><b class="light">Definition: </b><%= @term.def %></p>
<% end %>
<% if @term.lit? %>
<p><b class="light">Literal: </b><%= @term.lit %></p>
<% end %>
<% if @term.desc? %>
<p><b class="light">Description: </b><%= @term.desc %></p>
<% end %>

<div class="well center">

  <div class="btn-group">
  <%= link_to '<i class="icon-arrow-down"></i>'.html_safe,nil, id: 'vote-down', title:'Vote Down', class: 'btn btn-small' %> 
  <%= link_to '------------'.html_safe,nil, id: 'accuracy', title:'97% Accurate', class: 'btn btn-small' %>
  <%= link_to '<i class="icon-arrow-up"></i>'.html_safe,nil, id: 'vote-up', title:'Vote Up', class: 'btn btn-small' %>
  </div>
   <%= link_to '<i class="icon-heart"></i>'.html_safe,nil, id: 'save', title:'Save To Favorites', class: 'btn btn-small' %>
  <%= link_to '<i class="icon-flag"></i>'.html_safe,nil, id: 'flag', title:'Call Bullshit', class: 'btn btn-small' %>
  <% if signed_in? %>
  <%= link_to '<i class="icon-cog icon-white"></i>'.html_safe, edit_term_path(@term), id: 'edit', title:'Edit', class: "btn btn-small btn-pink" %> 
  <% end %>
  <% if signed_in? && current_user.admin? %>
  <%= link_to '<i class="icon-remove icon-white"></i>'.html_safe, @term, method: :delete, id: 'delete', title:'Delete', data: { confirm: 'Are you sure?'}, class: "btn btn-small btn-danger" %><% end %> 
 </div>

<h2>See Also</h2>
<%= render 'varients/list' %>
<hr>

<h2>Phrases</h2>

</div>
<div class="span6">
  
  <% if @term.comments.any? %>
<h2>Comments</h2>
  <% @term.comments.each do |comment| %>
    <p>
      <%= comment.author %> 
      <span class="light">
      <%= comment.created_at.strftime("%m/%d/%Y") %>
      </span>
    </p>   
    <p class="well">
      <%= comment.body %>
    </p>
  <% end %>
  <% end %>

<% if signed_in? %>
<h2>Add a Comment:</h2>
<%= form_for([@term, @term.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, class: "input-block-level" %>
  </div>
  <div class="actions">
    <%= button_tag(type: 'submit', class: "btn") do %>
    <i class="icon-comment"></i> Add Comment
    <% end %>
  </div>
<% end %>
<% end %>

<h2>Add a Phrase</h2>
  <%= render 'phrases/form' %>
</div>
</div>
