<% provide(:title, 'Sign Up') %>



<div class="row-fluid">
  <div class="span8 offset2">
    <h1>Register Account</h1>
    <h4>With an account you can.</h4>
    <ul class="unstyled">
      <li class="light">Create new entries and add them to the dictionary.</li>
      <li class="light">Comment on and edit existing entries.</li>
      <li class="light">Create your own personal lists of favorite entries.</li>
    </ul>

  	<%= render 'shared/error_messages', object: @user %>

    <%= form_for(@user) do |f| %>

      <div class="row-fluid">
        <div class="span6">
                        <%= f.label :name %>
      <%= f.text_field :name, class: "input-block-level" %>
        </div>
        <div class="span6">
                        <%= f.label :email, 'Email <span class="mini">*your email will never be displayed on this site</span>'.html_safe %>
      <%= f.text_field :email, class: "input-block-level"  %>
        </div>        
      </div>
      <div class="row-fluid">
        <div class="span6">
                    <%= f.label :password %>
      <%= f.password_field :password, class: "input-block-level"  %>   
        </div>
        <div class="span6">
                        <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, class: "input-block-level"  %>
        </div>
      </div>


           


 



      <div class="control-group">
         <%= recaptcha_tags display: {theme: 'clean'} %>     
      </div>

      <%= f.submit "Create my account", class: "btn btn-block btn-large btn-pink" %>

    <% end %>
  </div>
</div>