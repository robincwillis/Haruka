<div class="row-fluid">
  <div class="span8 offset2">
<%= form_for @message do |f| %>    
<%= render 'shared/error_messages', object: @message %>

    <div class="row-fluid">
      
    <div class="span6">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: "input-block-level" %>
    </div>
    <div class="span6">
      <%= f.label :email %><br />
      <%= f.text_field :email, class: "input-block-level" %>
    </div>
    </div>

    <%= f.label :subject %><br />
    <%= f.text_field :subject, class: "input-block-level"  %>
  
    <%= f.label :body %><br />
    <%= f.text_area :body, class: "input-block-level"  %>

    <div class="control-group">
         <%= recaptcha_tags display: {theme: 'clean'} %>     
    </div>
 
  <div class="actions">
    <%= f.submit "Send Message", class: "btn btn-block btn-pink" %>
  </div>
<% end %>
  </div>
</div>

