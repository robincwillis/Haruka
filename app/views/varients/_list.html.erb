<% if @term.varients.any? || @term.inverse_term_varients.any? %>
<h2>See Also</h2>
<% end %>
<ul id="varients" class="unstyled">
<% if @term.varients.any? %>
	
		<% for varient in @term.varients %>
			<li>
				<p>
	  			<%= link_to varient.term_varient.name, varient.term_varient %>
	  			<% if varient.term_varient.kanji? %>
	  				<span class="light"> <%= varient.term_varient.kanji %></span>
  				<% else %>
  					<% if varient.term_varient.kana? %> 
	 					<span class="light"> <%= varient.term_varient.kana %></span>
	 				<% end %>
	 			<% end %>
			 	  <% if signed_in? && current_user.admin? %>
  					<%= render 'shared/delete_mini', object: varient %>
  					<% end %> 
				 </p>
			</li>
		<% end %>
<% end %>


<% if @term.inverse_varients.any? %>

	<% for varient in @term.inverse_varients %>

		<li>
			<p>
			<%= link_to varient.term.name, varient.term %>
			<% if varient.term.kanji? %>
				<span class="light"> <%= varient.term.kanji %></span>
			<% else %>
				<% if varient.term.kana? %> 
					<span class="light"> <%= varient.term.kana %></span>
				<% end %>
			<% end %>
			<% if signed_in? && current_user.admin? %>
				<%= render 'shared/delete_mini', object: varient %>
			<% end %> 
			 </p>
		</li>
<% end %>
<% end %>


</ul>